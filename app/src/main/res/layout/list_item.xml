<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/len_2">

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/font_24"
        android:textColor="@color/colorPrimary"
        apps:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/len_4">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:textSize="@dimen/font_20"
            android:layout_height="wrap_content"
            apps:text="不为谁而做的歌"
            android:maxLines="1"
            android:gravity="start|bottom"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/txt_artist"
            android:textSize="@dimen/font_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:text="林俊杰"
            android:maxLines="1"
            android:gravity="start|top"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/im_details"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/len_4"
        android:layout_marginBottom="@dimen/len_4"
        android:layout_height="match_parent"
        android:background="@drawable/ic_details"/>
</LinearLayout>