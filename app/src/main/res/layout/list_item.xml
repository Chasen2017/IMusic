<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/len_2">

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        android:textColor="@color/colorPrimary"
        apps:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="19"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="18"
                android:orientation="vertical"
            android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_4">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|bottom"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_20"
                    apps:text="不为谁而做的歌" />

                <TextView
                    android:id="@+id/txt_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16"
                    apps:text="林俊杰" />
            </LinearLayout>

            <ImageView
                android:id="@+id/im_details"
                android:layout_width="@dimen/len_16"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/len_8"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginRight="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="1"
                android:background="@drawable/ic_details"
                android:padding="@dimen/len_8" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_alpha_32"/>
    </LinearLayout>
</LinearLayout>