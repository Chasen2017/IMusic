<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ic_touch_menu"
    android:background="@drawable/ic_touch_menu"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/len_28"
        apps:text="1" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="19"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/len_4">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|bottom"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                apps:text="不为谁而做的歌" />

            <TextView
                android:id="@+id/txt_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_16"
                apps:text="林俊杰" />
        </LinearLayout>

        <ImageView
            android:id="@+id/im_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/len_4"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/len_10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_details"
            android:tint="@color/black" />

    </LinearLayout>
</LinearLayout>